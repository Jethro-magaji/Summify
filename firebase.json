{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "site": "summify",
        "public": "./public",
        "headers": [{
            "source": "**/*.@(js|html)",
            "headers": [{
                "key": "Cache-Control",
                "value": "max-age=0"
            }]
        }]
    },
    "storage": {
        "rules": "storage.rules"
    }
}